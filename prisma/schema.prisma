// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SHARED_ACCESS
  USER
  ADMIN
}

model User {
  id        String   @id @default(uuid(7)) @db.Uuid
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  superUser Boolean  @default(false)

  githubAccountId   String?         @unique @db.Uuid
  githubAccount     GithubAccount?  @relation(fields: [githubAccountId], references: [id])
  supabaseAccountId String          @unique
  supabaseAccount   SupabaseAccount @relation(fields: [supabaseAccountId], references: [id])

  clients UserRoleForClient[]
}

model GithubAccount {
  id       String @id @default(uuid(7)) @db.Uuid
  githubId Int    @unique
  login    String @unique

  user User?

  triggeredInstallations GitHubInstallation[]

  @@index(login)
}

model SupabaseAccount {
  id        String   @id
  // TODO: Integrate Supabase and figure out, what can be stored
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User?
}

model UserRoleForClient {
  id             String   @id @default(uuid(7)) @db.Uuid
  userId         String   @db.Uuid
  clientId       String   @db.Uuid
  role           UserRole
  sharedAccessId String?  @db.Uuid
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user         User                @relation(fields: [userId], references: [id])
  client       Client              @relation(fields: [clientId], references: [id])
  sharedAccess SharedClientAccess? @relation(fields: [sharedAccessId], references: [id], onDelete: Cascade)

  @@index([userId, clientId])
  @@index([clientId])
  @@index([sharedAccessId])

  // There are also partial indexes required. Which are not supported by Prisma. They are in the migration file 20260129123312_init/migration.sql
}

model Client {
  id        String   @id @default(uuid(7)) @db.Uuid
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  githubInstallationId String?             @unique @db.Uuid
  githubInstallation   GitHubInstallation? @relation(fields: [githubInstallationId], references: [id])
  users                UserRoleForClient[]

  /// To which clients this client gave access to see this clients data.
  givenAccesses    SharedClientAccess[] @relation("givenAccesses")
  /// Which clients granted this client accesses to see theirs data.
  receivedAccesses SharedClientAccess[] @relation("recievedAccesses")

  @@index([githubInstallationId])
}

model SharedClientAccess {
  id          String @id @default(uuid(7)) @db.Uuid
  sharerId    String @db.Uuid
  recipientId String @db.Uuid

  createdAt DateTime @default(now())

  sharer          Client              @relation("givenAccesses", fields: [sharerId], references: [id])
  recipient       Client              @relation("recievedAccesses", fields: [recipientId], references: [id])
  grantedAccesses UserRoleForClient[]

  @@unique([sharerId, recipientId])
  @@index(recipientId)
}

model GitHubInstallation {
  id        String    @id @default(uuid(7)) @db.Uuid
  githubId  Int       @unique
  createdAt DateTime  @default(now())
  revokedAt DateTime?

  creatorId String        @db.Uuid
  creator   GithubAccount @relation(fields: [creatorId], references: [id])

  client Client?
  repos  GitHubRepo[]

  @@index(githubId)
  @@index(creatorId)
}

model GitHubRepo {
  id             String             @id @default(uuid(7)) @db.Uuid
  installationId String             @db.Uuid
  installation   GitHubInstallation @relation(fields: [installationId], references: [id], onDelete: Cascade)
  owner          String
  name           String
  githubId       Int                @unique
  isPrivate      Boolean            @default(false)
  isEnabled      Boolean            @default(true)
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  syncRuns       RepoSyncRun[]
  activityEvents RepoActivityEvent[]
  dailySummaries RepoDailySummary[]

  @@index([installationId])
}

model RepoSyncRun {
  id           String     @id @default(uuid(7)) @db.Uuid
  repoId       String     @db.Uuid
  repo         GitHubRepo @relation(fields: [repoId], references: [id], onDelete: Cascade)
  runType      String // "daily" | "backfill"
  windowStart  DateTime
  windowEnd    DateTime
  status       String     @default("queued") // "queued" | "running" | "success" | "error"
  errorMessage String?
  startedAt    DateTime?
  finishedAt   DateTime?
  createdAt    DateTime   @default(now())

  @@index([status])
}

model RepoActivityEvent {
  id         String     @id @default(uuid(7)) @db.Uuid
  githubId   String
  repoId     String     @db.Uuid
  repo       GitHubRepo @relation(fields: [repoId], references: [id], onDelete: Cascade)
  occurredAt DateTime
  type       String // "commit" | "pr_merged" | "pr_opened" | "issue_closed" | "release" | "tag" | "ci"
  title      String
  url        String
  author     String?
  additions  Int?
  deletions  Int?
  createdAt  DateTime   @default(now())

  @@unique([repoId, type, githubId])
  @@index([repoId, occurredAt])
}

model RepoDailySummary {
  id          String     @id @default(uuid(7)) @db.Uuid
  repoId      String     @db.Uuid
  repo        GitHubRepo @relation(fields: [repoId], references: [id], onDelete: Cascade)
  date        DateTime   @db.Date
  windowStart DateTime
  windowEnd   DateTime
  summaryText String
  stats       Json? // Counts and metrics
  noChanges   Boolean    @default(false)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@unique([repoId, date])
}
